{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Desk AI",
  "version": "0.1.0",
  "identifier": "com.marcodenic.deskai",
  "build": {
    "beforeDevCommand": "npm run dev -- --open=false",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/desk-ai-backend"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Desk AI",
        "fullscreen": false,
        "resizable": true,
        "width": 1100,
        "height": 720
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      },
      "capabilities": [{
        "identifier": "main-capability",
        "description": "Capability for the main window",
        "windows": ["main"],
        "permissions": [
          "core:default",
          "core:event:allow-listen",
          "core:event:allow-emit",
          "core:event:allow-emit-to",
          "http:default",
          {
            "identifier": "http:allow-fetch",
            "allow": [{ "url": "https://**" }]
          },
          "dialog:default",
          "dialog:allow-open",
          "shell:default",
          {
            "identifier": "shell:allow-open",
            "allow": [{ "path": "**" }]
          }
        ]
      }]
    }
  }
}
